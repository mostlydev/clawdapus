FROM claw-trading-agent:latest

# Tiverton: Coordinator, trade compliance, news synthesis
MODEL primary anthropic/claude-sonnet-4-6
MODEL fallback openrouter/moonshotai/kimi-k2.5

CONFIGURE openclaw config set agents.defaults.heartbeat.every 15m
CONFIGURE openclaw config set agents.defaults.heartbeat.to channel:${DISCORD_TRADING_FLOOR_CHANNEL}

INVOKE 15 8 * * 1-5 "Pre-market synthesis. Write to /mnt/clawd-shared/reports/morning/$(date +%Y-%m-%d)-tiverton.md then post brief to #trading-floor."
INVOKE */5 * * * * "News poll. Check /mnt/clawd-shared/news/latest.md and route high-impact items."
INVOKE */5 * * * * "Export audit snapshot to /mnt/clawd-shared/logs/."
